<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    tools:context=".admin.AdminEditProductActivity">

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
        android:id="@+id/product_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Name"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:background="@drawable/input_design"
        android:textColorHint="@color/colorAccent"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"

        />

    <ImageView
        android:id="@+id/product_image_edit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/product_name_edit"
        />

    <EditText
        android:id="@+id/product_price_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Price"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:background="@drawable/input_design"
        android:textColorHint="@color/colorAccent"
        android:textSize="18sp"
        android:layout_below="@id/product_image_edit"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/product_quantity_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product quantity add"
        android:textColorHint="@color/colorAccent"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:background="@drawable/input_design"
        android:textSize="18sp"
        android:layout_below="@id/product_price_edit"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/save_product_edit_btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/product_quantity_edit"
        android:layout_margin="5dp"
        android:textColor="@color/colorAccent"
        android:text="Save"
        />

        <Button
        android:id="@+id/delete_product_edit_btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/product_quantity_edit"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/save_product_edit_btn"
        android:textColor="@color/colorAccent"
        android:text="Delete"
        />


    </RelativeLayout>

</androidx.cardview.widget.CardView>