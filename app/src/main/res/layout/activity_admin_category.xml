<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">


    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add new Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear_category_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/tops_women"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/login_background"/>

        <ImageView
            android:id="@+id/pants_women"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/main_logo"/>

        <ImageView
            android:id="@+id/shoes_women"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/buttons"/>

        <ImageView
            android:id="@+id/accessories_women"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/buttons"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_category_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_category_layout_1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/tops_men"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/buttons"/>

        <ImageView
            android:id="@+id/pants_men"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/buttons"/>

        <ImageView
            android:id="@+id/shoes_men"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/buttons"/>

        <ImageView
            android:id="@+id/accessories_men"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/buttons"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_category_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_category_layout_2"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/sport_equipment"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/buttons"/>

        <ImageView
            android:id="@+id/type_10"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/buttons"/>

        <ImageView
            android:id="@+id/type11"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/buttons"/>

        <ImageView
            android:id="@+id/type12"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/buttons"/>

    </LinearLayout>

</RelativeLayout>