<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.ConfirmOrderActivity"
    android:background="@color/background">


    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm shipping credentials."
        android:textSize="22sp"
        android:background="@color/background"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/name_confirm_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Name"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        />

    <EditText
        android:id="@+id/phone_confirm_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_confirm_order"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Phone"
        android:inputType="phone"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        />

    <EditText
        android:id="@+id/address_confirm_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_confirm_order"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Address for shipping"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        />

    <TextView
        android:id="@+id/total_price_confirm_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total price"
        android:textSize="22sp"
        android:layout_above="@id/confirm_order_btn"
        android:background="@color/background"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/confirm_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:background="@drawable/orange_button"
        android:layout_margin="15dp"
        android:textSize="20sp"
        />
</RelativeLayout>